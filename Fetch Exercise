        <script>
           

            document.getElementById("ftch").addEventListener('click',pegardados);
            function pegardados(){
                let lat=document.getElementById("inpt").value;
                let long=document.getElementById("inpt2").value;
                fetch(`https://api.open-meteo.com/v1/forecast?latitude=${lat}&longitude=${long}&hourly=weathercode&current_weather=true`)
                .then(response => {
                if (!response.ok) {
                throw new Error('Failed to fetch weather data');
                }
                return response.json();
                })
            .then(data => {
                let code = data.current_weather.weathercode;
                

               


                document.getElementById("area").innerHTML="Latitude:"+ data.latitude + "<br>Longitude:"+data.longitude+"<br>Temperatura:"+
                data.current_weather.temperature ;
                document.getElementById("p1").innerHTML="Day Weather Condition: "+obj[code].day.description;
                document.getElementById("p2").innerHTML="Night Weather Condition: "+obj[code].night.description;
           

            
                document.getElementById("img1").src=obj[code].day.image;
                document.getElementById("img2").src=obj[code].night.image;
            
                })
            .catch(error => {
                console.error(error);
                document.getElementById("area").innerHTML = "Failed to fetch weather data";
                });
            }
        </script>
