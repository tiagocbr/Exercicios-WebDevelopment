<!DOCTYPE html>
<html>
    <head>
        <title>Calculadora</title>
        <meta charset="utf-8">
        <link href="style.css" rel="stylesheet">
    </head>
    <body>
        <div>
        </div>
        <div>
            <form id="formularios" action="#">
                <p>
                    num1: <input type="text" id="num1">
                </p>
                <p>
                    num2: <input type="text" id="num2">
                </p>
                <p>
                    operation: <input type="text" id="operation">
                </p>
                <button type="submit">Calculate</button>
            </form>
        </div>
        <div>
            <p id="result">
            </p>
        </div>
        <script>
            let num1, num2, operation, result, formulario;
            formulario = document.getElementById("formularios");
            formulario.addEventListener("submit", function(event) {
                event.preventDefault();
                num1 = parseFloat(document.getElementById("num1").value);
                num2 = parseFloat(document.getElementById("num2").value);
                operation = document.getElementById("operation").value;
                result = performOperation(num1, num2, operation);
                document.getElementById("result").innerHTML = "Result: " + result;
            });

            function performOperation(num1, num2, operation) {
                if(operation === "add") {
                    return num1 + num2;
                } else if(operation === "subtract") {
                    return num1 - num2;
                } else if(operation === "multiply") {
                    return num1 * num2;
                } else if (operation === "divide") {
                    return num1 / num2;
                }
            }
        </script>
    </body>
</html>
